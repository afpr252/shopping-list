.icon-small,
.icon-medium,
.icon-custom {
  display: inline-block;
  height: 100%;
  text-indent: -9999px;
}

.icon-small {
  width: 1rem;
  font-size: 1rem;
  line-height: 1rem;
}

.icon-medium {
  width: 2rem;
  font-size: 2rem;
  line-height: 2rem;
}


.icon-add {
  -webkit-mask: url(<%= asset_path('plus-square-fill.svg') %>);
  mask: url(<%= asset_path('plus-square-fill.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
  background-color: #0d6efd; // $primary
}
.icon-add:hover {
  background-color: #0b5ed7; // shade-color($primary, 15%)
}

.icon-remove {
  -webkit-mask: url(<%= asset_path('dash-square-fill.svg') %>);
  mask: url(<%= asset_path('dash-square-fill.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
  background-color: #ffc107; // $warning
}
.icon-remove:hover {
  background-color: #d9a406; // shade-color($warning, 15%)
}

.icon-for-later {
  -webkit-mask: url(<%= asset_path('arrow-down-square-fill.svg') %>);
  mask: url(<%= asset_path('arrow-down-square-fill.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
  background-color: #6c757d; // $secondary
}
.icon-for-later:hover {
  background-color: #494f54;
}

.icon-for-now {
  -webkit-mask: url(<%= asset_path('arrow-up-square-fill.svg') %>);
  mask: url(<%= asset_path('arrow-up-square-fill.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
  background-color: #6c757d; // $secondary
}
.icon-for-now:hover {
  background-color: #494f54;
}

.icon-all-for-now {
  -webkit-mask: url(<%= asset_path('arrow-up-square.svg') %>);
  mask: url(<%= asset_path('arrow-up-square.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
  background-color: #6c757d; // $secondary
}
.icon-all-for-now:hover {
  background-color: #494f54;
}

.icon-confirm {
  -webkit-mask: url(<%= asset_path('check-square-fill.svg') %>);
  mask: url(<%= asset_path('check-square-fill.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
  background-color: #0d6efd; // $primary
}
.icon-confirm:hover {
  background-color: #0b5ed7; // shade-color($primary, 15%)
}

.icon-unconfirm {
  -webkit-mask: url(<%= asset_path('x-square-fill.svg') %>);
  mask: url(<%= asset_path('x-square-fill.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
  background-color: #ffc107; // $warning
}
.icon-unconfirm:hover {
  background-color: #d9a406; // shade-color($warning, 15%)
}

.icon-move {
  line-height: 1.5rem;
  width: 2rem;
  background: url(<%= asset_path('justify.svg') %>);
  background-size: 100% 100%;
  cursor: move;
}

.icon-url {
  background: url(<%= asset_path('box-arrow-in-up-right.svg') %>);
  background-size: 100% 100%;
}

.icon-menu {
  background: url(<%= asset_path('three-dots-vertical.svg') %>);
  background-size: 100% 100%;
}

.icon-sort-name,
.icon-sort-group {
  background-color: #0d6efd;
  width: 1.25rem;
  font-size: 1.25rem;
  line-height: 1rem;
  vertical-align: middle;
}
.btn-primary .icon-sort-name,
.btn-primary .icon-sort-group,
.btn-outline-primary:hover .icon-sort-name,
.btn-outline-primary:hover .icon-sort-group {
  background-color: #fff;
}
.icon-sort-name {
  -webkit-mask: url(<%= asset_path('sort-alpha-down.svg') %>);
  mask: url(<%= asset_path('sort-alpha-down.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
}
.icon-sort-group {
  -webkit-mask: url(<%= asset_path('view-stacked.svg') %>);
  mask: url(<%= asset_path('view-stacked.svg') %>);
  -webkit-mask-size: 100% 100%;
  mask-size: 100% 100%;
}

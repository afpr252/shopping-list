= form_with(model: group, class: 'edit-group', html: { autocomplete: 'off' }) do |form|
  = render 'shared/errors', errors: group.errors

  .form-group
    = form.label :name
    = form.text_field :name, class: 'form-control', autofocus: true

  .form-group
    = form.label :position
    = form.number_field :position, class: 'form-control'

  = form.submit class: 'btn btn-primary'

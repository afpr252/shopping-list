%li.list-group-item.shopping-list-item{ id: "item-#{item.id}", class: item.total.positive? ? 'to-buy' : nil, data: { group_id: item.group_id } }
  .d-flex
    .align-self-center.menu
      .dropdown
        %a.dropdown-toggle.item-menu{ href: '#', data: { toggle: 'dropdown' } } Actions
        .dropdown-menu
          %h6.dropdown-header Item options
          .dropdown-divider
          = link_to 'Edit', edit_item_path(item), class: 'dropdown-item'
          = link_to 'Delete', item_path(item), method: :delete, data: { confirm: 'Delete the item?' }, class: 'dropdown-item'
          .dropdown-divider
          = link_to 'Sort items', items_group_path(item.group), class: 'dropdown-item'
    .flex-grow-1.align-self-center
      = '(T)' if item.temporary?
      = item.name
    - if item.url.present?
      .align-self-center.url
        = link_to 'URL', item.url, target: '_blank', class: 'item-url', rel: 'noopener'
    .align-self-center.total= item.total
    .btn-group.align-self-center.actions{ role: 'group' }
      = link_to '+', shopping_list_item_path(item), method: :patch, remote: true, data: { params: "total=#{item.total + 1}" }, class: 'btn btn-primary action'
      = link_to '-', shopping_list_item_path(item), method: :patch, remote: true, data: { params: "total=#{item.total - 1}" }, class: 'btn btn-warning action'

%ul.list-group.items
  - items.each do |item|
    %li.list-group-item
      .d-flex
        .flex-grow-1.align-self-center
          (#{item.position})
          = item.name
        .btn-group{ role: 'group' }
          = link_to 'Edit', edit_item_path(item), class: 'btn btn-secondary'
          = link_to 'Delete', item_path(item), method: :delete, data: { confirm: 'Delete the item?' }, class: 'btn btn-secondary'
